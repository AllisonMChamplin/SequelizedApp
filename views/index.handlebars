<div class="container">
  <div class="row">
    <div class="col-md-12">
      <img src="/assets/img/cheeseburger-34315_640.png" alt="Image by Clker-Free-Vector-Images from Pixabay"
        class="burger-image">
      <h1>It's Burger Time!</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md">
      <div class="noteat">

        <h2>Burgers waiting to be devoured!</h2>
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>

      </div>
    </div>

    <div class="col-md-1"></div>
    <div class="col-md">
      <div class="eat">

        <h2>Burgers that were devoured!</h2>
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/if}}
          {{/each}}
        </ul>

      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 add">
      <h2>Add a burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="name">Burger Name:</label>
          <input type="text" id="ca" name="name">
          <button type="submit">Add burger</button>

        </div>

        <div class="form-group" id="hideme">
          <input type="radio" name="devoured" value="1"> Devoured!<br>
          <input type="radio" name="devoured" value="0" checked> Ready to eat!
        </div>

      </form>
    </div>
  </div>
</div>